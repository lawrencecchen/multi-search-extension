{
  "name": "Multi-Search Extension",
  "version": "1.0",
  "description": "Opens ChatGPT, Google, and Perplexity whenever you search from the Omnibox.",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "MultiSearch",
      "keyword": "multi",
      "search_url": "chrome-extension://__MSG_@@extension_id__/search.html?q=%s",
      "favicon_url": "icons/icon16.png",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon16.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "search.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}